<div class="container">
    <div class="row">
        <div class="jumbotron col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h1>Eat Da Burger!!!!</h1>
        </div>
    </div>
    <div class="row burgerRow">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6" id="notDevouredBurg">
<h2>Not Devoured</h2>
<ol>
    {{#each burgers}} 
        {{#unless devoured}}
            <li> <p class="burgerName">{{burger_name}}</p>
            <form method ="POST" action="/burgers/{{this.id}}?_method=PUT">
            <input type="hidden" name = "burger_id" type = "text" value = {{this.id}}>
            <br>
            <button class="btn btn-lg btn-danger" type="submit">Devour</button>
            </form>
            </li>
      {{/unless}} 
    {{/each}}
</ol>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6" id="devouredBurg">
<h2>Devoured</h2>
<ol>
    {{#each burgers}} 
        {{#if this.devoured}}
            <li><p class="burgerName">{{this.burger_name}}</p>
            <input class="form-control" type="text" placeholder="{{this.burger_name}}" readonly></li>
        {{/if}} 
    {{/each}}
</ol>
</div>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" id="addBurgerDiv">
<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burger-input">Which burger will be your next victim?:</label>
        <input type="text" id="burgerInput">
    </div>
        <button class="btn btn-lg btn-danger" type="submit" id="submitBtn">Submit your burger to meet its fate!</button>
</form>
</div>
<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
</div>